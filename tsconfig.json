{
  "compilerOptions": {
    "target": "es2020",                                  
    "module": "ESNext",                                
    "allowJs": true,                                  
    "sourceMap": true,                                  
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,                                      
    "skipLibCheck": true,    
    "esModuleInterop": true,  
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true                     
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
